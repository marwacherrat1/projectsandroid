<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contact_detail_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_alignParentStart="true"
                android:paddingStart="10dp"/>

            <ImageView
                android:id="@+id/favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_24"
                android:layout_toStartOf="@id/logout_button"
                android:layout_alignBaseline="@id/logout_button"

                android:paddingEnd="16dp"/>

            <ImageView
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_logout_24"
                android:layout_alignParentEnd="true"
                android:paddingEnd="16dp"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <!-- End Toolbar -->

<!--    Fragment 1-->
    <LinearLayout
        android:id="@+id/Layout_Settings"
        android:layout_below="@+id/contact_detail_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

    <RelativeLayout
        android:id="@+id/contact_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pinklight1">
        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="280dp"
                app:cardCornerRadius="200dp"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/Temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/temphum"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="280dp"
                app:cardCornerRadius="200dp"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/Lock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/lock5"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LinearLayout"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btt_voir_Temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/mypurple"
                    android:text="Temperature et Humidite"
                    android:textSize="18sp"
                    app:cornerRadius="10dp" />
                <Button
                    android:id="@+id/btt_voir_lock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/mypurple"
                    android:text="controler la porte"
                    android:textSize="18sp"
                    app:cornerRadius="10dp" />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
<!--    End Fragment 111111111-->

    <!--    Fragment 22222-->
    <LinearLayout
        android:id="@+id/Temp_Controle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contact_detail_Toolbar"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pinklight1">
            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:id="@+id/tempVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="200dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginHorizontal="20dp"

                        app:cardElevation="10dp">

                        <ImageView
                            android:id="@+id/Temp_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/temv"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/temperatureVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="20dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/ptserif_bolditalic"
                        android:textSize="30dp"
                        android:hint="temp"
                        />
                </LinearLayout>
            <LinearLayout
                android:id="@+id/humVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="200dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginHorizontal="20dp"

                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/Hum_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/humv2"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/humidityVal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="20dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/ptserif_bolditalic"
                    android:textSize="30dp"
                    android:hint="hum"
                    />

            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LinearLayout1"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/greenButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/mypurple" />

                    <Button
                        android:id="@+id/orangeButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="20dp"
                       android:textColor="@color/mypurple" />

                    <Button
                        android:id="@+id/redButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/mypurple" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <!--    End Fragment 222222-->

    <!--    Fragment 33333-->
    <LinearLayout
        android:id="@+id/Lock_Controle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contact_detail_Toolbar"
       android:gravity="center_horizontal"
        android:background="@drawable/pinklight"
        android:orientation="vertical"
        android:visibility="visible">
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="210dp"
                app:cardCornerRadius="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="30dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/Lock_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/lock5"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/ptserif_bolditalic"
                android:textSize="30dp"
                android:hint="Lock or Unlock"
                />
            <Button
                android:id="@+id/lockUnlockBtt"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/mypurple"
                android:background="@drawable/onoff" />
    </LinearLayout>
    <!--    End Fragment 333333-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_manu" />

</RelativeLayout>
